

<div class="">
    <h3>Cập nhật khóa học</h3>
    <form class="" method="post" action="/products/{{product._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{product.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="des">Mô tả</label>
            <textarea class="form-control" id="des" name="des">{{product.des}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoid">Ảnh</label>
            <input type="text" class="form-control" value="{{product.avatar}}" id="avatar" name="avatar">
        </div>
        <div class="form-group">
            <label for="price">Giá bán</label>
            <input type="text" class="form-control" value="{{product.price_new}}" id="price_new" name="price_new">
        </div>
        <div class="form-group">
            <label for="i_price">Giá nhập</label>
            <input type="text" class="form-control" value="{{product.i_price}}" id="i_price" name="i_price">
        </div>

        <div class="form-group">
            <label for="origin">Xuất xứ</label>
            <input type="text" class="form-control" value="{{product.origin}}" id="origin" name="origin">
        </div>
        <div class="form-group">
            <label for="discount">Giảm giá</label>
            <input type="text" class="form-control" value="{{product.discount}}" id="discount" name="discount">
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>